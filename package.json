{
  "name": "scoresync",
  "version": "1.0.0",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "tsc && node dist/index.js",
    "dev": "node --loader ts-node/esm src/index.ts",
    "build": "tsc",
    "build:caxa": "npm run build && caxa -i . -o release/scoresync.exe --exclude \"src/**\" --exclude \"*.ts\" --exclude \"*.map\" --exclude \"release/**\" --exclude \"node_modules/@types/**\" --exclude \".git/**\" --exclude \"*.md\" --exclude \"tsconfig.json\" -- \"{{caxa}}/node_modules/.bin/node\" \"{{caxa}}/dist/index.js\""
  },
  "pkg": {
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist-exe",
    "assets": [
      "dist/**/*",
      "lib/**/*",
      "node_modules/**/*"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@sonolus/core": "^7.14.0",
    "@sonolus/express": "^7.4.0",
    "@sonolus/free-pack": "^1.1.7",
    "express": "^4.21.2",
    "morgan": "^1.10.0",
    "typescript": "^5.8.3",
    "usctool": "^0.4.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/morgan": "^1.9.9",
    "caxa": "^3.0.1",
    "nexe": "^5.0.0-beta.4",
    "pkg": "^5.8.1",
    "ts-node": "^10.9.2",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-node-externals": "^3.0.0"
  }
}
